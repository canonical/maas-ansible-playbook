# Global variable file for Ansible playbooks

# Standard MAAS Variables
maas_port: 5240             # The port MAAS uses to comunicate on
maas_https_port: 5443       # The https port MAAS uses to comunicate on
maas_url: ""                # The URL maas uses

# Installation variables
maas_version: "latest"          # ie: 3.2, 2.8
maas_installation_type: "snap"  # snap or deb
maas_snap_channel: "stable"     # if using snap, then the channel. ie: stable, beta, edge
maas_deb_state: "present"       # if using deb, the state for install
maas_state: "install"          # whether to install, or upgrade maas

# grafana agent repo
grafana_agent_pkg: https://github.com/grafana/agent/releases/download/v0.22.0/agent-linux-amd64.zip

maas_proxy_postgres_proxy_enabled: false

maas_postgres_user: "maas"
maas_postgres_database: "maasdb"

maas_postgres_uri_login: "{{ maas_postgres_user }}:{{ maas_postgres_password }}"
maas_postgres_proxy_host_v4: "{{ groups['maas_proxy'][0]['ansible_default_ipv4']['address'] if (groups['maas_proxy']|length > 0) and groups['maas_proxy'][0]['ansible_ipv4_default'] is defined and groups['maas_proxy'][0]['ansible_ipv4_default']['address'] is defined else ''}}"
maas_postgres_proxy_host_v6: "{{ groups['maas_proxy'][0]['ansible_default+ipv6']['address'] if (groups['maas_proxy']|length > 0) and groups['maas_proxy'][0]['ansible_ipv6_default'] is defined and groups['maas_proxy'][0]['ansible_ipv6_default']['address'] is defined else ''}}"
maas_postgres_proxy_uri: "postgresql://{{ maas_postgres_uri_login }}@{{ maas_postgres_proxy_host_v4 if maas_postgres_proxy_host_v4|length > 0 else maas_postgres_proxy_host_v6 }}:5432/{{ maas_postgres_database }}"
maas_postgres_primary_host_v4: "{{ groups['maas_postgres_primary'][0]['ansible_default_ipv4']['address'] if groups['maas_postgres_primary']|length > 0 and groups['maas_postgres_primary']['ansible_default_ipv4'] is defined and groups['maas_postgres_primary'][0]['ansible_default_ipv4']['address'] is defined else ''}}"
maas_postgres_primary_host_v6: "{{ groups['maas_postgres_primary'][0]['ansible_default_ipv6']['address'] if groups['maas_postgres_primary']|length > 0 and groups['maas_postgres_primary']['ansible_default_ipv6'] is defined and groups['maas_postgres_primary'][0]['ansible_default_ipv6']['address'] is defined else ''}}"
maas_postgres_primary_uri: "postgres://{{ maas_postgres_uri_login }}@{{ maas_postgres_primary_host_v4 if maas_postgres_primary_host_v4|length > 0 else maas_postgres_primary_host_v6 }}"
maas_postgres_uri_snap: "maas-test-db:///"
maas_alt_uri: "{{ maas_postgres_primary_uri if maas_postgres_installation_type|default(maas_installation_type)|lower == 'deb' else maas_postgres_uri_snap }}"
maas_postgres_uri: "{{ maas_postgres_proxy_uri if maas_proxy_postgres_proxy_enabled else maas_alt_uri }}"