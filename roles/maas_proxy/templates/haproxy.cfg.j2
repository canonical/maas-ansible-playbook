global
    maxconn 100

defaults
    log global
    mode tcp
    retries 2
    timeout client 30m
    timeout connect 4s
    timeout server 30m
    timeout check 5s

{% if (maas_proxy_bind_addr_v4 is defined) and (maas_proxy_bind_addr_v4|length > 0) %}

frontend maas-region-controller-v4
    mode tcp
    bind {{ maas_proxy_bind_addr_v4 }}:{{ maas_proxy_port }}
    use_backend maas-region-controllers

{% endif %}

{% if (maas_proxy_bind_addr_v6 is defined) and (maas_proxy_bind_addr_v6|length > 0) %}

frontend maas-region-controller-v6
    mode tcp
    bind {{ maas_proxy_bind_addr_v6 }}:{{ maas_proxy_port }}
    use_backend maas-region-controllers

{% endif %}

backend maas-region-controllers
    balance roundrobin
{% if maas_proxy_upstreams|length > 0 %}
    {% for upstream in maas_proxy_upstreams %}
    server {{ upstream['hostname'] }} {{ upstream['ip'] }}:{{ upstream['port'] }}
    {% endfor %}
{% else %}
    {% for upstream in groups['maas_region_controller'] %}
        {% if ('ansible_default_ipv4' in upstream) and ('address' in upstream['ansible_default_ipv4']) %}
    server {{ upstream['hostname'] }} {{ upstream['ansible_default_ipv4']['address'] }}:5240
        {% endif %}
        {% if ('ansible_default_ipv6' in upstream) and ('address' in upstream['ansible_default_ipv6']) %}
    server {{ upstream['hostname'] }} {{ upstream['ansible_default_ipv6']['address'] }}:5240
        {% endif %}
    {% endfor %}
{% endif %}

{% if maas_proxy_postgres_proxy_enabled %}
    {% if (maas_proxy_postgres_bind_addr_v4 is defined) and (maas_proxy_postgres_bind_addr_v4|length > 0) %}

frontend maas-postgres-v4
    mode tcp
    bind {{ maas_proxy_postgres_bind_addr_v4 }}:{{ maas_proxy_postgres_port }}
    use_backend maas-postgres

    {% endif %}

    {% if (maas_proxy_postgres_bind_addr_v6 is defined) and (maas_proxy_postgres_bind_addr_v6|length > 0) %}

frontend maas-postgres-v6
    mode tcp
    bind {{ maas_proxy_postgres_bind_addr_v6 }}:{{ maas_proxy_postgres_port }}
    use_backend maas-postgres

    {% endif %}

backend maas-postgres
    {% if maas_proxy_postgres_upstreams|length > 0 %}
        {% for upstream in maas_proxy_postgres_upstreams %}
    server {{ upstream['hostname'] }} {{ upstream['ip'] }}:{{ upstream['port'] }}
        {% endfor %}
    {% else %}
        {% for pg in groups['maas_postgres'] %}
            {% if ('ansible_default_ipv4' in pg) and ('address' in pg['ansible_default_ipv4']) %}
    server {{ pg['hostname'] }} {{ pg['ansible_default_ipv4']['address'] }}:5432
            {% endif %}
            {% if ('ansible_default_ipv6' in pg) and ('address' in pg['ansible_default_ipv6']) %}
    server {{ pg['hostname'] }} {{ pg['ansible_default_ipv6']['address'] }}:5432
            {% endif %}
        {% endfor %}
    {% endif %}

{% endif %}
